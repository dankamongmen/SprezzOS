#!/usr/bin/env bash

set -e
set -o nounset
set -o pipefail

usage () { echo "usage: `basename $0` filename" ; return 0 ; }
usageerr () { usage >&2 ; return 1 ; }

[ $# -eq 1 ] || usageerr

sudo debootstrap --include=locales,dh-di,less,git,subversion,mr,vim-nox,udev,autoconf,uuid-dev,zlib1g-dev,debian-keyring,aptitude,dialog,procps,xmlto,kernel-wedge,devscripts \
	--make-tarball="$1" --variant=buildd unstable dibuild

grub-mkfont /usr/share/fonts/truetype/inconsolata/Inconsolata.otf --size=14 \
	inconsolata.pf2
