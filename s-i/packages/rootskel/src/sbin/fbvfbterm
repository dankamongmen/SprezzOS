#!/bin/sh

if [ -n $LANG ] ; then
	export LANG=C.UTF-8
fi

export FSIZE="18"
export FHEIGHT="18"
export FWIDTH="10"
export FONT="Terminus (TTF)"

echo -ne "\e[?25l" # hide cursor
fbv -ciuker "$1" << EOF
q
EOF
shift
export FBTERM_BACKGROUND_IMAGE=1

exec fbterm -n "$FONT" -s "$FSIZE" --font-height="$FHEIGHT" \
	--font-width="$FWIDTH" -- \
	/sbin/tangoize env LANG=$LANG TERM=fbterm "$@" 2>> /var/log/syslog
