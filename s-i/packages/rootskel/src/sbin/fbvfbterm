#!/bin/sh

if [ -n $LANG ] ; then
	export LANG=C.UTF-8
fi

export FSIZE="18"
export FHEIGHT="18"
export FONT="Terminus (TTF)"

echo -ne "\e[?25l" # hide cursor
fbv -ciuker "$1" << EOF
q
EOF
shift
export FBTERM_BACKGROUND_IMAGE=1

# FIXME i'd like to call /sbin/tangoize with "$@" when things calm down
# put exec back in!
#exec
fbterm -n "$FONT" -s "$FSIZE" --font-height="$FHEIGHT" \
	-- env LANG=$LANG TERM=fbterm "$@"

# FIXME we failed. require a read before continuing
echo "press enter for debugging justice"
read erp
